---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

const copy = {
  title: "Tildagon on GitHub",
};

const repos = [
  {
    name: "badge-2024-hardware",
    description: "The hardware specs of the Tildagon",
    url: "https://github.com/emfcamp/badge-2024-hardware",
  },

  {
    name: "badge-2024-software",
    description: "The firmware that runs on the Tildagon",
    url: "https://github.com/emfcamp/badge-2024-software",
  },

  {
    name: "badge-2024-app-store",
    description: "The infrastructure behind the Tildagon App Store",
    url: "https://github.com/emfcamp/badge-2024-app-store",
  },
  {
    name: "badge-2024-documentation",
    description: "The source docs of the Tildagon",
    url: "https://github.com/emfcamp/badge-2024-documentation",
  },
  {
    name: "badge-2024-addons",
    description: "Community submitted addons for the Tildagon",
    url: "https://github.com/emfcamp/badge-2024-add-ons",
  },



];
---

<Layout title={copy.title}>
  <ul role="list" class="linked-card-list">
    {
      repos.map((repo) => (
        <Card title={repo.name} href={repo.url}>
          {repo.description}
        </Card>
      ))
    }
  </ul>
</Layout>
