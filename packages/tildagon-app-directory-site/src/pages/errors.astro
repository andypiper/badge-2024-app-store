---
import Layout from "../layouts/Layout.astro";
import Alert from "../components/Alert.astro";

const directory = await fetch("http://localhost:3000/v1/failures");
const data = await directory.json();
console.log(data);

const copy = {
  title: "Tildagon App Directory",
};
---

<Layout title={copy.title}>
  <main class="col-md-12">
    <h1>{copy.title}</h1>
    <section role="list" class="apps">
      {data.items.length ?
      <h1>No errors</h1>
      <p>The app store doesn't currently see any apps that it wasn't able to make available. Did you tag your repo with the `tildagon-app` topic?</p>
      :null}
      {
        data.items.map((app: any) => (
          <article>
            <p>App: {app.name}</p>
            <p>Error:</p>
            <code><pre>app.reason</pre></code>
          </article>
        ))
      }
    </section>
    <Alert kind="info">
      Can't find your app? <a href="/errors">Check if the app store has a problem parsing it.</a>
    </Alert>
  </main>
</Layout>

<style>
  .apps {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    gap: 1rem;
    margin: none;
    padding: none;
    flex-wrap: wrap;
  }
</style>
